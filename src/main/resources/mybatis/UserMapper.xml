<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.my_spring.mapper.UserMapper">

    <select id="findUserInfo" resultType="com.my_spring.entity.User">
        select name, age,password from user;
    </select>

    <select id="getUserById" parameterType="int" resultType="com.my_spring.entity.User">
        SELECT id , name , age , password
        FROM user
        WHERE id=#{id}
    </select>

    <insert id="insertUser" parameterType="com.my_spring.entity.User" useGeneratedKeys="true">
        insert into user(name , age , password)
        VALUE (#{name},#{age},#{password})
    </insert>

    <delete id="delUserById" parameterType="id">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

</mapper>